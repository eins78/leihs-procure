{
  "name": "leihs-procurement-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "serve": "9.1.0",
    "tachyons-type-scale": "^6.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "analyze": "source-map-explorer build/static/js/main.*",
    "analyze-build": "npm run -s build && npm run -s analyze",
    "coverage": "npm test -- --coverage",
    "lint": "eslint --fix 'src/{,**/}*.js{,x}' && npm run -s lint:json",
    "ci:lint": "eslint 'src/{,**/}*.js{,x}' && npm run -s ci:lint:json",
    "lint:json": "prettier --write 'src/{,**/}*.json'",
    "ci:lint:json": "prettier --list-different 'src/{,**/}*.json'",
    "test": "react-scripts test --env=jsdom"
  },
  "proxy": {
    "/(graphql|graphiql|images|attachments|status|upload)": {
      "target": "http://localhost:3003"
    },
    "/procure/(graphql|graphiql|images|attachments|status|upload)": {
      "target": "http://localhost:3003"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/Bootstrap/*.{js,jsx}",
      "!**/*.examples.{js,jsx}"
    ]
  },
  "devDependencies": {
    "@fortawesome/fontawesome": "^1.1.8",
    "@fortawesome/fontawesome-free-solid": "^5.0.13",
    "@fortawesome/react-fontawesome": "0.0.20",
    "accounting-js": "^1.1.1",
    "apollo-boost": "^0.1.15",
    "bootstrap": "^4.1.3",
    "browser-info": "^1.2.0",
    "classnames": "^2.2.6",
    "debug": "^3.1.0",
    "downshift": "^1.31.16",
    "es6-promise": "^4.2.4",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "graphiql": "^0.11.11",
    "graphql": "^14.0.0",
    "graphql-tag": "^2.9.2",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.10",
    "luxon": "^1.3.3",
    "prettier": "^1.14.0",
    "prettier-eslint": "^8.8.2",
    "prop-types": "^15.6.2",
    "qs": "^6.5.2",
    "react": "^16.4.2",
    "react-apollo": "^2.1.11",
    "react-day-picker": "^7.1.10",
    "react-dom": "^16.4.2",
    "react-highlight-words": "^0.11.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^1.1.4",
    "react-test-renderer": "^16.4.1",
    "reactstrap": "^6.3.1",
    "source-map-explorer": "git+https://github.com/danvk/source-map-explorer.git#b74f718"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  },
  "eslintConfig": {
    "plugins": [
      "prettier",
      "react"
    ],
    "extends": [
      "react-app",
      "eslint:recommended",
      "prettier",
      "prettier/react",
      "prettier/standard",
      "plugin:react/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "react/prop-types": "off"
    },
    "overrides": [
      {
        "files": [
          "src/components/Bootstrap.js"
        ],
        "rules": {
          "react/prop-types": "error"
        }
      }
    ]
  }
}
