{
  "name": "leihs-procurement-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "serve": "9.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run -s build:ui && npm run -s build:app",
    "build:app": "react-scripts build",
    "build:ui": "cd leihs-ui && npm run -s build",
    "postinstall": "cd leihs-ui && { npm ci || npm i ;}",
    "analyze": "source-map-explorer build/static/js/main.*",
    "analyze-build": "npm run -s build && npm run -s analyze",
    "coverage": "npm test -- --coverage",
    "lint": "eslint --fix 'src/{,**/}*.js{,x}' && npm run -s lint:json",
    "ci:lint": "eslint 'src/{,**/}*.js{,x}' && npm run -s ci:lint:json",
    "lint:json": "prettier --write 'src/{,**/}*.json'",
    "ci:lint:json": "prettier --list-different 'src/{,**/}*.json'",
    "test": "react-scripts test --env=jsdom"
  },
  "XXXproxy": {
    "/(graphql|graphiql|images|attachments|status|upload|sign-out|sign-in)": {
      "target": "http://localhost:3230"
    },
    "/procure/(graphql|graphiql|images|attachments|status|upload|sign-out|sign-in)": {
      "target": "http://localhost:3230"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/Bootstrap/*.{js,jsx}",
      "!**/*.examples.{js,jsx}"
    ]
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free-solid": "^5.0.13",
    "@fortawesome/fontawesome-svg-core": "^1.2.12",
    "@fortawesome/free-regular-svg-icons": "^5.6.3",
    "@fortawesome/free-solid-svg-icons": "^5.6.3",
    "@fortawesome/react-fontawesome": "^0.1.3",
    "accounting-js": "^1.1.1",
    "apollo-boost": "^0.1.23",
    "bootstrap": "^4.2.1",
    "browser-info": "^1.2.0",
    "classnames": "^2.2.6",
    "debug": "^3.2.6",
    "downshift": "^1.31.16",
    "es6-promise": "^4.2.5",
    "eslint": "5.6.0",
    "eslint-config-prettier": "^2.10.0",
    "eslint-plugin-prettier": "^2.7.0",
    "eslint-plugin-react": "^7.12.3",
    "graphiql": "^0.11.11",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.11",
    "luxon": "^1.9.0",
    "moment": "^2.23.0",
    "prettier": "^1.15.3",
    "prettier-eslint": "^8.8.2",
    "prop-types": "^15.6.2",
    "qs": "^6.6.0",
    "react": "^16.7.0",
    "react-apollo": "^2.3.3",
    "react-day-picker": "^7.2.4",
    "react-dom": "^16.7.0",
    "react-highlight-words": "^0.11.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.3",
    "react-test-renderer": "^16.7.0",
    "reactstrap": "^6.5.0",
    "source-map-explorer": "git+https://github.com/danvk/source-map-explorer.git#b74f718",
    "tachyons-type-scale": "^6.1.1",
    "xlsx": "^0.14.1"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  },
  "eslintConfig": {
    "plugins": [
      "prettier",
      "react"
    ],
    "extends": [
      "react-app",
      "eslint:recommended",
      "prettier",
      "prettier/react",
      "prettier/standard",
      "plugin:react/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "react/prop-types": "off"
    },
    "overrides": [
      {
        "files": [
          "src/components/Bootstrap.js"
        ],
        "rules": {
          "react/prop-types": "error"
        }
      }
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
